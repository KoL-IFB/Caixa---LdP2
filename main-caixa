package caixa;

import javax.swing.JOptionPane;

/**
 *
 * @author Aluno
 */
public class Caixa {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        float produto;
        float total = 0;
        int menu;
        do{
            produto = Float.parseFloat(JOptionPane.showInputDialog(null,"Entre com o valor do produto separado por ponto final.\n Digite '0' para sair."));
            total = total + produto;
        }while(produto!=0);
        JOptionPane.showMessageDialog(null,"SubTotal = R$"+total+".");
        menu = Integer.parseInt(JOptionPane.showInputDialog(null,"Selecione o método de pagamento:\n1 - Cheque\n2 - Dinheiro")); //Acho que esse pedaço pode ter função própria
        switch(menu){                                                                                                            //Pra não ter que criar mais um laço de repetição
            case 1:                                                                                                              //No main
                cheque(total);
                break;
            case 2:
                dinheiro(total);
                break;
            default:
                JOptionPane.showMessageDialog(null,"Opção inválida! Tente Novamente.");
                
        }
        }
    }
    

